{# templates/form/form_theme.html.twig #}

{% block form_row %}
    <div class="mb-4">
        {{ form_label(form) }}
        {{ form_widget(form, { 'attr': { 'class': 'block w-full p-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300' } }) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_label %}
    {% if label is not same as(false) %}
        <label for="{{ id }}" class="block text-sm font-medium text-gray-700">{{ label|trans({}, translation_domain) }}</label>
    {% endif %}
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="text-red-600 text-sm mt-1">
            {% for error in errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{% block form_widget_simple %}
    <input type="{{ type|default('text') }}" {{ block('widget_attributes') }} value="{{ value }}" class="block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300">
{% endblock %}


{% block form_submit %}
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        {{ label|default('Submit')|trans }}
    </button>
{% endblock %}
